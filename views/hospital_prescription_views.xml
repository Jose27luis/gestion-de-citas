<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hospital_prescription_form" model="ir.ui.view">
            <field name="name">hospital.prescription.form</field>
            <field name="model">hospital.prescription</field>
            <field name="arch" type="xml">
                <form string="Receta Médica">
                    <header>
                        <button name="action_issue" string="Emitir" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_dispense" string="Dispensar" type="object" class="oe_highlight" invisible="state != 'issued'"/>
                        <button name="action_print_prescription" string="Imprimir" type="object" icon="fa-print"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,issued,dispensed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="doctor_id"/>
                                <field name="appointment_id"/>
                            </group>
                            <group>
                                <field name="prescription_date"/>
                                <field name="validity_days"/>
                                <field name="expiry_date" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="diagnosis" placeholder="Diagnóstico..."/>
                        </group>
                        <notebook>
                            <page string="Medicamentos">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" domain="[('is_medication','=',True)]"/>
                                        <field name="quantity"/>
                                        <field name="dosage"/>
                                        <field name="frequency"/>
                                        <field name="duration"/>
                                        <field name="instructions"/>
                                        <field name="available_qty"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Instrucciones">
                                <field name="general_instructions" widget="html"/>
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hospital_prescription_tree" model="ir.ui.view">
            <field name="name">hospital.prescription.tree</field>
            <field name="model">hospital.prescription</field>
            <field name="arch" type="xml">
                <list string="Recetas">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="prescription_date"/>
                    <field name="expiry_date"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="action_hospital_prescription" model="ir.actions.act_window">
            <field name="name">Recetas Médicas</field>
            <field name="res_model">hospital.prescription</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
