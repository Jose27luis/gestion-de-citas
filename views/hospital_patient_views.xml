<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista formulario -->
        <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="Paciente">
                    <header>
                        <button name="action_view_appointments" string="Ver Citas" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="appointment_count" widget="statinfo" string="Citas"/>
                            </button>
                            <button name="action_view_prescriptions" type="object" class="oe_stat_button" icon="fa-medkit">
                                <field name="prescription_count" widget="statinfo" string="Recetas"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Nombre del paciente"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="identification_id"/>
                                <field name="birth_date"/>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="blood_type"/>
                            </group>
                            <group>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="partner_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Información Personal">
                                <group>
                                    <field name="address" placeholder="Dirección completa..."/>
                                    <field name="emergency_contact"/>
                                    <field name="emergency_phone" widget="phone"/>
                                </group>
                            </page>
                            <page string="Historial Médico">
                                <group>
                                    <field name="allergies" placeholder="Alergias conocidas..."/>
                                    <field name="medical_history" widget="html"/>
                                </group>
                            </page>
                            <page string="Citas">
                                <field name="appointment_ids" readonly="1"/>
                            </page>
                            <page string="Recetas">
                                <field name="prescription_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista tree -->
        <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <list string="Pacientes">
                    <field name="name"/>
                    <field name="identification_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="age"/>
                    <field name="blood_type"/>
                </list>
            </field>
        </record>

        <!-- Vista kanban -->
        <record id="view_hospital_patient_kanban" model="ir.ui.view">
            <field name="name">hospital.patient.kanban</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="identification_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="image_1920"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('hospital.patient', 'image_1920', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <div><field name="identification_id"/></div>
                                    <div><i class="fa fa-phone"/> <field name="phone"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista search -->
        <record id="view_hospital_patient_search" model="ir.ui.view">
            <field name="name">hospital.patient.search</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <search string="Buscar Pacientes">
                    <field name="name"/>
                    <field name="identification_id"/>
                    <field name="phone"/>
                    <filter string="Activos" name="active" domain="[('active','=',True)]"/>
                    <group expand="0" string="Agrupar Por">
                        <filter string="Tipo de Sangre" name="blood_type" context="{'group_by':'blood_type'}"/>
                        <filter string="Género" name="gender" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Pacientes</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear primer paciente
                </p>
            </field>
        </record>

    </data>
</odoo>
