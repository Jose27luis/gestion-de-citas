<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Secuencia para Pacientes -->
        <record id="sequence_hospital_patient" model="ir.sequence">
            <field name="name">Secuencia Pacientes</field>
            <field name="code">hospital.patient</field>
            <field name="prefix">PAC/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Secuencia para Citas -->
        <record id="sequence_hospital_appointment" model="ir.sequence">
            <field name="name">Secuencia Citas</field>
            <field name="code">hospital.appointment</field>
            <field name="prefix">CITA/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Secuencia para Recetas -->
        <record id="sequence_hospital_prescription" model="ir.sequence">
            <field name="name">Secuencia Recetas</field>
            <field name="code">hospital.prescription</field>
            <field name="prefix">RX/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
